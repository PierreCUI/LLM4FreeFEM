/* Save vector field [ux,uy] as a .sol file */
func int printvec2(string sout, real[int] & ux) {
  
  int n = ux.n;
  ofstream fout(sout);
  fout.precision(16);

  /* Header */
  fout << "MeshVersionFormatted 1\n\nDimension 2\n\nSolAtVertices\n"<<n/2<<"\n1 2\n"<<endl;
  
  /* Print values */
  for (int k=0; k<n; k=k+2){
    fout<<ux[k]<<" "<<ux[k+1]<<endl;
    //cout<<ux[k]<<" "<<ux[k+1]<<endl;
    }
  
  /* End keyword */
  fout<<"End"<<endl;

  return(1);
}

