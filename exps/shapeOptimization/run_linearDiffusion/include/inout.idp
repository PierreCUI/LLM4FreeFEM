/* Read a .sol file containing a vector-valued solution in 2d */
func int loadvec2(string sin, real[int] & ux) {
  ifstream fin(sin);
  string s;
  int np;
  
  /* Read header */
  for(int i=0; i<5; i++) {
    fin >> s;
  }
  
  /* Parse number of vertices */
  fin >> np;
  
  /* Read header (bis) */
  for(int i=0; i<2; i++) {
    fin >> s;
  }
  
  /* Read values of the velocity */
  for(int i=0; i<np*2; i=i+2) {
    fin>>ux[i];
    fin>>ux[i+1];
    
  }
  
  return(1);
}



/* Read a .sol file containing a vector-valued solution in 3d */
